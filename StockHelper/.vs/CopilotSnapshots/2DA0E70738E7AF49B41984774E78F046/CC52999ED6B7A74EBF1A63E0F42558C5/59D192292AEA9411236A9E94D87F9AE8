using Services.Interfaces;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Configuration;
using System.IO;

namespace Services.Contracts.Logs
{
    public class FileAppender : ILogAppender
    {
        private readonly string _filePath;
        private readonly LogLevels _minimumLevel = LogLevels.Info;
        private readonly object _lock = new object();
        private readonly long _maxFileSizeBytes = 10 * 1024 * 1024; // 10 MB default
        private readonly int _maxBackupFiles = 5;

        public FileAppender(string fileName)
        {
            var logDir = ConfigurationManager.AppSettings["logFileDirectory"];
            
            if (string.IsNullOrWhiteSpace(logDir))
            {
                logDir = Path.Combine(AppDomain.CurrentDomain.BaseDirectory, "Logs");
            }

            // Ensure the directory path is absolute
            if (!Path.IsPathRooted(logDir))
            {
                logDir = Path.Combine(AppDomain.CurrentDomain.BaseDirectory, logDir);
            }

            // Create directory if it doesn't exist
            if (!Directory.Exists(logDir))
            {
                try
                {
                    Directory.CreateDirectory(logDir);
                }
                catch (Exception ex)
                {
                    Console.Error.WriteLine($"FileAppender: Cannot create log directory {logDir}. {ex.Message}");
                    // Fallback to current directory
                    logDir = AppDomain.CurrentDomain.BaseDirectory;
                }
            }

            _filePath = Path.Combine(logDir, fileName ?? "system.log");
        }

        public void Append(LogLevels level, string message)
        {
            if (level < _minimumLevel)
            {
                return;
            }

            string logEntry = $"{DateTime.Now:yyyy-MM-dd HH:mm:ss} [{level}] {message}";

            lock (_lock)
            {
                try
                {
                    // Check if file rotation is needed
                    RotateLogFileIfNeeded();

                    File.AppendAllText(_filePath, logEntry + Environment.NewLine, Encoding.UTF8);
                }
                catch (IOException ioEx)
                {
                    Console.Error.WriteLine($"FileAppender: IO error writing to log file {_filePath}. {ioEx.Message}");
                }
                catch (UnauthorizedAccessException authEx)
                {
                    Console.Error.WriteLine($"FileAppender: Access denied to log file {_filePath}. {authEx.Message}");
                }
                catch (Exception ex)
                {
                    Console.Error.WriteLine($"FileAppender: Unexpected error writing to log file {_filePath}. {ex.Message}");
                }
            }
        }

        /// <summary>
        /// Rotates the log file if it exceeds the maximum size.
        /// </summary>
        private void RotateLogFileIfNeeded()
        {
            try
            {
                if (!File.Exists(_filePath))
                {
                    return;
                }

                var fileInfo = new FileInfo(_filePath);
                if (fileInfo.Length < _maxFileSizeBytes)
                {
                    return;
                }

                // Rotate existing backup files
                for (int i = _maxBackupFiles - 1; i > 0; i--)
                {
                    string oldBackup = $"{_filePath}.{i}";
                    string newBackup = $"{_filePath}.{i + 1}";

                    if (File.Exists(oldBackup))
                    {
                        if (File.Exists(newBackup))
                        {
                            File.Delete(newBackup);
                        }
                        File.Move(oldBackup, newBackup);
                    }
                }

                // Move current log to .1
                string firstBackup = $"{_filePath}.1";
                if (File.Exists(firstBackup))
                {
                    File.Delete(firstBackup);
                }
                File.Move(_filePath, firstBackup);
            }
            catch (Exception ex)
            {
                Console.Error.WriteLine($"FileAppender: Error during log rotation. {ex.Message}");
            }
        }
    }
}
